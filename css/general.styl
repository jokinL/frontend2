/*COLOR*/
gris = #f0f0f0
grisOscuro = #E4E4E4
grisOscuroSombra = #C8C8C8
grisNav = #656565
newGreen = #1abb9c

contentPadding()
	padding 1em

/*
############################################################
############################################################
BODY
############################################################
############################################################
*/
body
	background-color gris
/*
############################################################
############################################################
HEADER
############################################################
############################################################
*/
header
	background-color newGreen
	padding 1em
	overflow auto
	position fixed
	width 100%
	border-bottom 3px solid rgba(200, 200, 200, 0.5);
	figure
		float left
		a
			padding-right 1em
			img
				width 50px
	/*###############################
	TITULAR
	###############################*/
	.titular
		float left
		h1
			font-size 1em
			font-weight normal
			color white
	/*###############################
	AVATAR
	###############################*/
	.usuario
		float right
		.avatar
			img
				width 40%
				border-radius 50%
		
/*
############################################################
############################################################
NAV
############################################################
############################################################
*/
nav
	background-color grisOscuro
	padding-top: 91px;
	ul
		margin 0
		padding 0
		li
			list-style none
			display inline-block
			a
				display block
				padding 1.5em
				text-decoration none
				text-transform uppercase
				font-size 0.7em
				color grisNav
				&:hover
					background-color grisOscuroSombra
			&:first-child
				a
					padding-left 1.5em
/*
############################################################
############################################################
SECTION
############################################################
############################################################
*/
section
	contentPadding()
	/*###############################
	SECTION
	###############################*/
	article
		contentPadding()
		background-color white
		border-bottom solid 3px grisOscuro