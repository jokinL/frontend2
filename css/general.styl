/**FONT FAMILY*/
@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,700')
openSans ='Open Sans', sans-serif

/*COLOR*/
gris = #f0f0f0
grisOscuro = #E4E4E4
grisOscuroSombra = #C8C8C8
grisNav = #656565
newGreen = #1abb9c
greenBtn = #15A388
greenOscuro = #1B5A4E
amarilloBtn = #F1BF0F
amarilloSombra = #A98810

/*MIXINS*/
contentPadding()
	padding 1em

/*
############################################################
############################################################
BODY
############################################################
############################################################
*/
body
	font-family openSans
	background-color gris
/*
############################################################
############################################################
HEADER
############################################################
############################################################
*/
header
	background-color newGreen
	position fixed
	z-index 2
	width 100%
	box-shadow 0 3px 0 rgba(0, 0, 0, 0.09)
	.content
		padding 1em
		overflow auto
	figure
		float left
		a
			padding-right 1em
			img
				width 50px
	/*###############################
	TITULAR
	###############################*/
	.titelContent
		float left
		width 55%
		h1
			font-size 1em
			font-weight normal
			color white
			text-transform none
			margin-top: 17px;
			strong
				text-transform uppercase
		.publish
			background-color amarilloBtn
			color white
			padding 0.5em 1.6em 0.5em 0.7em
			text-decoration none
			text-transform uppercase
			font-size 10px
			position absolute
			top 32px
			right 70px
			border-bottom: solid 3px amarilloSombra;
			border-bottom-left-radius: 5px;
			border-bottom-right-radius: 0px;
			
	/*###############################
	AVATAR
	###############################*/
	.user
		position relative
		figure
			float none
			position absolute
			right 24px
			top 9px
			z-index 1
		.avatar
			width 40px
			img
				width 100%
				border-radius 50%
		a
			&.arrow
				text-decoration none
				background-color amarilloBtn
				color white
				font-weight 700
				padding 0.2em 0.5em 0.2em 0.9em
				position absolute
				top 14px
				right 0px
				border-bottom: solid 3px amarilloSombra;
				border-bottom-right-radius: 5px;
/*
############################################################
############################################################
NAV
############################################################
############################################################
*/
nav
	background-color greenOscuro
	padding-top: 87px;
	ul
		margin 0
		padding 0
		overflow-x auto
		height 49px
		white-space nowrap
		position relative
		
		li
			list-style none
			display inline-block
			a
				display block
				padding 1.5em
				text-decoration none
				text-transform uppercase
				font-size 0.7em
				color white
				&:hover
					background-color grisOscuroSombra
			&:first-child
				a
					padding-left 1.5em
/*
############################################################
############################################################
SECTION
############################################################
############################################################
*/
section
	contentPadding()
	/*###############################
	SECTION
	###############################*/
	article
		contentPadding()
		background-color white
		border-bottom solid 3px grisOscuro
		margin-bottom 1em